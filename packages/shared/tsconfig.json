{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}